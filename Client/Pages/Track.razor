@page "/track"

<div class="container">
    <div class="text-center">

        <EditForm Model="model" OnValidSubmit="TrackOrderId">
            <DataAnnotationsValidator></DataAnnotationsValidator>
            <ValidationSummary></ValidationSummary>
            <div class="d-flex flex-column align-items-center ">
                <div class="w-50">
                    <div class="form-group row ">
                        <label for="OrderId" class="col-sm-4 col-form-label">Track with Order ID</label>
                        <InputText class="form-control col-sm-8" id="OrderId" placeholder="Paste your order id here" @bind-Value="model.OrderId" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">track</button>
                    </div>
                </div>
                </div>
        </EditForm>

        @if (Processing != null)
        {

            <div class="row text-center">

                @foreach (var p in Processing)
                {
                    <div class="col-3 ">
                        <div>@p.Status</div>
                    </div>
                }

            </div>
            <div class="progress" style="height: 20px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated"
                     role="progressbar" style="width: @(Processing.Count/4f*100)%;"
                     aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                    @(Processing.Count/4f*100)%
                </div>
            </div>
        }
    </div>


</div>
