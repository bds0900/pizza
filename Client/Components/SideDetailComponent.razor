


<div class="col mb-4">
    <div class="card h-100">
        <img class="card-img-top " src="@Side.Image" alt="Card image cap" width="400" height="400">
        <div class="card-body">

            <div class="d-flex flex-column align-items-center">
                <h5 class="card-title">@Side.SideName</h5>
                <p class="card-text">@Side.Description</p>
                <p class="card-text">$@Side.SidePrice</p>
            </div>

            <div class="d-flex flex-column align-items-center">
                <div>
                    Qty
                </div>
                <div class="d-flex justify-content-center">
                    <button class="oi oi-minus" @onclick="(()=>AddQty(-1))"></button>
                    <input class="text-center" style="width:50px" @bind="Qty">
                    <button class="oi oi-plus" @onclick="(()=>AddQty(1))"></button>
                </div>

            </div>

        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-center">
                <button type="button" class="btn btn-primary" @onclick="(()=>AddItem(Side))">Add to Cart</button>
            </div>
        </div>
    </div>

</div>
