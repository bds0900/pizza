@using Client.Models

@if (PizzaInfo != null)
{
    <div class="container-fluid">


        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">

            @foreach (var type in PizzaInfo.Type)
            {
                <div class="col mb-4">
                    <div class="card h-100">
                        <img class="card-img-top " src="@type.Image" alt="Card image cap" width="400" height="400">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center">
                                <h5 class="card-title">@type.TypeName</h5>
                                <p class="card-text">@type.Description</p>
                            </div>

                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center">
                                <a href="/menu/@type.TypeName" class="btn btn-primary">Order it now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

}
else
{
    <div>Loading...</div>
}

@code {
    [Parameter]
    public PizzaInfo PizzaInfo { get; set; }
}
